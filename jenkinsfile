pipeline {
agent any
   tools {
        maven "default"
        jdk "jdk11"
            }
    triggers {
      pollSCM 'H/3 * * * * '
    }
    stages {

        stage('Maven Package') {
            steps {
                sh 'mvn clean package'
                
            }
        }
        stage('Testing') {
            steps {
                sh 'echo "Application Testing"'
                sh 'mvn test'
                junit '**/surefire-reports/TEST-*.xml'
            }
        }

        stage('Deploy to Dev') {
            when {
                expression {
                    BRANCH_NAME == "B1"
                }
            }
            steps {
                build job: 'deploy', parameters: [string(name: 'ENV', value: 'B1')]
            }
        }

        stage('Deploy to Prod') {
            when {
                expression {
                    BRANCH_NAME == "test"
                }
            }
            steps {
                build job: 'deploy', parameters: [string(name: 'ENV', value: 'test')]
            }
        }

    }

    post {
        always {
            cleanWs()
        }
    }

}

