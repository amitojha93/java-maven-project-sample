pipeline {

  agent any
parameters {
    choice(name: "DEPLOY_TO", choices: ['B1', 'prod', 'dev'], description: 'Pick Environment')
  }
  tools {
        maven "default"
        jdk "jdk11"
            }
	        triggers {
      		pollSCM 'H/1 * * * * '
    	}
    stages {
        stage('Maven Package') {
            steps {
                sh 'mvn clean package'
                sh 'env'
            }
        }
        stage('Testing') {
            steps {
                sh 'echo "Application Testing"'
                sh 'mvn test'
                junit '**/surefire-reports/TEST-*.xml'
            }
        }
    
	stage("Deploy") {
            parallel  {
        stage('Deploy to UAT') {
	 when {expression {  GIT_BRANCH == "origin/B1" } }
	 
            steps {
                sh "sudo docker rmi amitojha93/tomcat-uat2:v1 | true"
                sh "sudo docker container rm tomcat-uat2 -f | true"
                sh "sudo docker build . -t amitojha93/tomcat-uat2:v1"
                sh "sudo docker run --name tomcat-uat2 -d -p 8089:8080 amitojha93/tomcat-uat2:v1"
		withCredentials([usernamePassword(credentialsId: 'docker-hub-cred', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
        	sh "sudo docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
                sh 'sudo docker push amitojha93/tomcat-uat2:v1'

            }
        }
        stage('Deploy Prod') {
	when {  expression {  GIT_BRANCH == "origin/prod" } }   
            steps {
                sh "sudo docker rmi amitojha93/tomcat-prod3:v1 | true"
                sh "sudo docker container rm tomcat-prod3 -f | true"
                sh "sudo docker build . -t amitojha93/tomcat-prod3:v1"
                sh "sudo docker run --name tomcat-prod3 -d -p 8122:8080 amitojha93/tomcat-prod3:v1"
		withCredentials([usernamePassword(credentialsId: 'docker-hub-cred', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
        	sh "sudo docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
                sh 'sudo docker push amitojha93/tomcat-prod3:v1'
            }	
        }
	  stage('Deploy dev') {
	  when {  expression { GIT_BRANCH == "origin/dev"} }  
            steps {
                sh "sudo docker rmi amitojha93/tomcat-prod3:v1 | true"
                sh "sudo docker container rm tomcat-prod3 -f | true"
                sh "sudo docker build . -t amitojha93/tomcat-prod3:v1"
                sh "sudo docker run --name tomcat-prod3 -d -p 8132:8080 amitojha93/tomcat-prod3:v1"
		withCredentials([usernamePassword(credentialsId: 'docker-hub-cred', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
        	sh "sudo docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
                sh 'sudo docker push amitojha93/tomcat-prod3:v1'
            }	
        }
  }
}
}
  post {
    always {
      cleanWs()
    }
  }
  
}
