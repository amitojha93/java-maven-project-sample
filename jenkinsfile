pipeline {

  agent any
  tools {
        maven "default"
        jdk "jdk11"
            }
	        triggers {
      		pollSCM 'H/1 * * * * '
    	}

parameters {
    choice(name: 'ENV', choices: ['B1', 'prod'], description: 'Pick Environment')
  }
    stages {
        stage('Maven Package') {
            steps {
                sh 'mvn clean package'
                
            }
        }
        stage('Testing') {
            steps {
                sh 'echo "Application Testing"'
                sh 'mvn test'
                junit '**/surefire-reports/TEST-*.xml'
            }
        }
    
	
        stage('Deploy to UAT') {
      when {
        expression {
          ENV == "B1"
        } 
      }
            steps {
                sh "sudo docker rmi amitojha93/tomcat-uat1:v1 | true"
                sh "sudo docker container rm tomcat-uat1 -f | true"
                sh "sudo docker build . -t amitojha93/tomcat-uat1:v1"
                sh "sudo docker run --name tomcat-uat1 -d -p 8087:8080 amitojha93/tomcat-uat1:v1"
            }
        }

        stage('Deploy Prod') {
            when {
                  expression {
                 ENV == "prod"
        }
      }  
            steps {
                sh "sudo docker rmi amitojha93/tomcat-prod2:v1 | true"
                sh "sudo docker container rm tomcat-prod2 -f | true"
                sh "sudo docker build . -t amitojha93/tomcat-prod2:v1"
                sh "sudo docker run --name tomcat-prod2 -d -p 8088:8080 amitojha93/tomcat-prod2:v1"
            }
	
        }
  }

  post {
    always {
      cleanWs()
    }
  }
  
}
