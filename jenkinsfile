pipeline {
    agent any
    tools {
        maven "default"
        jdk "jdk11"
    }
    stages {
        stage('build') {
            steps {
                sh 'mvn package -DargLine="--add-opens java.base/java.util=ALL-UNNAMED"'
            }
        }
        stage('test') {
            steps {
                sh 'echo "Testing Application"'
                sh 'mvn test'
                junit '**/surefire-reports/TEST-*.xml'
            }
        }
        stage('Deploy') {
            steps {
                sh "docker rmi amitojha93/tomcat-dev:v1 | true"
                sh "docker container rm tomcat-dev -f | true"
                sh "docker build . -t amitojha93/tomcat-dev:v1"
                sh "docker run --name tomcat-dev -d -p 8081:8080 amitojha93/tomcat-dev:v1"
            }
        }
       
    }
}
