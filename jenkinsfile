pipeline {

  agent any
  tools {
        maven "default"
        jdk "jdk11"
            }
    triggers {
      pollSCM 'H/3 * * * * '
    }
    
parameters {
    choice(name: 'ENV', choices: ['B1', 'test'], description: 'Pick Environment')
  }
    stages {
        stage('Maven Package') {
            steps {
                sh 'mvn clean package'
                
            }
        }
        stage('Testing') {
            steps {
                sh 'echo "Application Testing"'
                sh 'mvn test'
                junit '**/surefire-reports/TEST-*.xml'
            }
        }
    
	
        stage('Deploy') {
      when {
        expression {
          ENV == "B1"
        } 
      }
            steps {
                sh "sudo docker rmi amitojha93/tomcat:v1 | true"
                sh "sudo docker container rm tomcat-dev -f | true"
                sh "sudo docker build . -t amitojha93/tomcat:v1"
                sh "sudo docker run --name tomcat-dev -d -p 8083:8080 amitojha93/tomcat:v1"
            }
        }

        stage('Deploy Prod') {
            when {
                  expression {
                 ENV == "test"
        }
      }  
      
            steps {
                sh "sudo docker rmi amitojha93/tomcat-sample:v1 | true"
                sh "sudo docker container rm tomcat-sample -f | true"
                sh "sudo docker build . -t amitojha93/tomcat-sample:v1"
                sh "sudo docker run --name tomcat-sample -d -p 8083:8080 amitojha93/tomcat-sample:v1"
            }
	
        }
  }

  post {
    always {
      cleanWs()
    }
  }
  
}
