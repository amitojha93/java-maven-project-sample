pipeline {
  agent any
   tools {
        maven "default"
        jdk "jdk11"
            }
    triggers {
      pollSCM 'H/3 * * * * '
    }
    stages {
        stage('Clone') {
            steps {
                git branch: 'master', url: 'https://github.com/amitojha93/java-maven-project-sample.git'
                git branch: 'Test',   url: 'https://github.com/amitojha93/java-maven-project-sample.git'
            }
        }
        stage('Build') {
            steps {
                sh 'mvn package'
            }
        }
        stage('Testing') {
            steps {
                sh 'echo "Application Testing"'
                sh 'mvn test'
                junit '**/surefire-reports/TEST-*.xml'
            }
        }
        stage('Deploying')
        {
            when{
		 branch 'Test'
		}
            steps {
                sh "sudo docker rmi amitojha93/tomcat-dev:v1 | true" 
                sh "sudo docker container rm tomcat-dev -f | true"
                sh "sudo docker build . -t amitojha93/tomcat-dev:v1"
                sh "sudo docker run -d -p 8081:8080 --name tomcat-dev amitojha93/tomcat-dev:v1"
            }
        }
	 stage('prod')
        {
            when {
		 branch 'master'
		}
            steps {
                sh "sudo docker rmi amitojha93/tomcat-prod:v1 | true" 
                sh "sudo docker container rm tomcat-prod -f | true"
                sh "sudo docker build . -t amitojha93/tomcat-prod:v1"
                sh "sudo docker run -d -p 8082:8080 --name tomcat-prod amitojha93/tomcat-prod:v1"
            }
             }
        }
}    
    
